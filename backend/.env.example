# Database Configuration
MONGODB_URI=mongodb://localhost:27017/strata_garden_rooms
MONGODB_DB_NAME=strata_garden_rooms

# Email Configuration
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@stratagarden.ie
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@stratagarden.ie
EMAIL_ADMIN=admin@stratagarden.ie

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_minimum_32_characters

# Application Configuration
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000
API_BASE_URL=http://localhost:3001

# Security Headers
SECURITY_CSP=enabled
RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/avif
UPLOAD_DIR=uploads

# Analytics
ANALYTICS_ENDPOINT=http://localhost:3001/api/analytics

# Retention Configuration
QUOTE_RETENTION_DAYS=60
CLEANUP_SCHEDULE=0 2 * * *

# Admin Configuration
ADMIN_EMAIL=admin@stratagarden.ie
ADMIN_PASSWORD=change_this_password

# Counties served (comma-separated)
SERVED_COUNTIES=Dublin,Wicklow,Kildare

# Pricing Configuration
DEFAULT_VAT_RATE=0.135
DEFAULT_CURRENCY=EUR